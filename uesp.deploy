wname = uesp.wikiappapi
description = MediaWiki extension used on UESP.net
repository = https://github.com/uesp/wikiappapi
backup = true
verbosity = 0

	# Staging is important as the APC cache randomly breaks if you try to update the files in place.
staged = true

ignore = *.deploy
ignore = .git*

dest = content1.uesp.net:/home/uesp/www/w/extensions/WikiAppApi/
dest = content2.uesp.net:/home/uesp/www/w/extensions/WikiAppApi/
dest = content3.uesp.net:/home/uesp/www/w/extensions/WikiAppApi/

destname = [backup]backup1.uesp.net:/home/uesp/www/w/extensions/WikiAppApi/
destname = [dev]content3.uesp.net:/home/uesp/dev/www/w/extensions/WikiAppApi/
destname = [dev]content3.uesp.net:/home/sfwiki/dev/www/w/extensions/WikiAppApi/

